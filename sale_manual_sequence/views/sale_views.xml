<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_manual_ref" model="ir.ui.view">
        <field name="name">view.order.form.manual.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <label for="custom_ref"/>
                <field name="custom_ref"/>
            </xpath>
            <field name="name" position="attributes">
                <attribute name="readonly" value="0"/>
                <attribute name="attrs">{'readonly': [('custom_ref', '=', False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>