<openerp>
  <data>
    <template id="report_label">
      <t t-call="report.html_container">
	<div class="page" style="margin:0; padding:0;">
	  <table t-att-style="'border-spacing:'+data['form']['cell_spacing']+';border-collapse: separate'">
	    <t t-foreach="get_data(data['form'].get('rows'),data['form'].get('columns'),data['form'].get('ids'),data['form'].get('model'),data['form'].get('number_of_copy'))" t-as="row">
	      <tr t-att-style="'height:'+data['form']['height']+';'">
		<t t-foreach="row" t-as="col">
		  <td t-att-style="'padding-left:'+data['form']['left_margin']+';padding-right:'+data['form']['right_margin']+';padding-top:'+data['form']['top_margin']+';min-width:'+data['form']['width']+';'">
		    <img t-if="company.logo and data['company_logo']" t-att-src="'data:image/png;base64,%s' % company.logo" t-att-style="'margin-right:2mm;height:'+data['form']['logo_size']+';width:'+data['form']['logo_size']+';'"/>

		    <t t-foreach="col" t-as="val">
		      <t t-if="val['newline']"><br/></t>
		      <span t-att-style="val['style']">
			<t t-if="(val.get('type') == 'normal')">
			  <t t-esc="val['string']"/>
			  <t t-esc="val['value']"/>
			</t>
			<t t-if="(val.get('type') == 'image')">
			  <t t-esc="val.get('string')"/>
			  <img t-att-src="'data:image/png;base64,%s' % (val.get('value'))" t-att-style="'height:'+data['form']['image_height']+';width:'+data['form']['image_width']"/>
			</t>
			<t t-if="(val.get('type') == 'barcode')">
			  <t t-esc="val.get('string')"/>
			  <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13',val.get('value') , data['form']['barcode_width'], data['form']['barcode_height'])"/>
			</t>
		      </span>
		    </t>
		  </td>
		</t>
	      </tr>
	    </t>
	  </table>
	</div>
      </t>
    </template>
  </data>
</openerp>
