<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="dynamic_filter_template_image_title_footer" inherit_id="website.dynamic_filter_template_image_title_footer">
            <xpath expr="//div[hasclass('card')]" position="inside">
                <t t-if="record['fields']['website_ribbon_id']"> 
                    <span t-attf-class="o_ribbon {{ record['fields']['website_ribbon_id'].html_class }}"
                        t-raw="record['fields']['website_ribbon_id'].html"/>
                </t>
            </xpath>
        </template>

    </data>
</odoo>